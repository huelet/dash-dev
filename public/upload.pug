doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Upload - Huelet, the video platform for humans
        include incl/scripts
        style.
            form input[type="file"] {
              font-size: 100px;
              position: absolute;
              left: 0;
              top: 0;
              opacity: 0;
            }
    body
        form(enctype="multipart/form-data", id="btat")
                input#chooseFile(type='file', name='chooseFile', required, accept="video/*")
                button.Button.Button-is-primary.btat(type="submit") Upload
        script(src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.6.0.min.js")
        script.
            $("form#btat").submit(function(event){
              event.preventDefault();
              const formData = new FormData($(this)[0]);
              $.ajax({
                url: '/api/ul/ul',
                type: 'POST',
                data: formData,
                async: false,
                cache: false,
                contentType: false,
                processData: false,
                success: function (returndata) {
                  alert(returndata);
                }
              });
              return false;
            });